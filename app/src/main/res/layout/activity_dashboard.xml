<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE">

    <!-- Scrollable Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18.9% DONE"
                    android:textColor="#FF4081"
                    android:textSize="16sp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WEEK 7 +3 day"
                    android:textColor="#FF4081"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="228 DAYS TO GO"
                    android:textColor="#FF4081"
                    android:textSize="16sp"
                    android:layout_weight="1"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Track Now Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginVertical="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:scaleType="centerCrop"
                        android:id="@+id/imageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/img_33" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Grid Section -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginTop="16dp">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:contentDescription="Medicines"
                    android:src="@drawable/img_29" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:contentDescription="Exercises"
                    android:src="@drawable/img_28" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:contentDescription="Hospitals"
                    android:src="@drawable/img_30" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:src="@drawable/img_24"
                    android:contentDescription="Reminders" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:contentDescription="Videos"
                    android:src="@drawable/img_31" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button_white"
                    android:contentDescription="Food"
                    android:src="@drawable/img_32" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Navbar -->
    <include
        android:id="@id/navbar"
        layout="@layout/activity_navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
