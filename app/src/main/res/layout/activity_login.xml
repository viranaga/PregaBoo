<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEBEE">

    <ImageView
        android:id="@+id/imageViewBaby"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.167" />

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="325dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_corner_background"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="17dp">

        <Button
            android:id="@+id/buttonExpecting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button_white"
            android:text="I AM EXPECTING A BABY"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonExpecting2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_button_white"
            android:text="I AM A MIDWIFE"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Login or Sign up here:"
            android:textColor="#F2EEEE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonGoogle"
                android:layout_width="75dp"
                android:layout_height="81dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/img_8" />

            <ImageButton
                android:id="@+id/buttonApple"
                android:layout_width="79dp"
                android:layout_height="73dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/img_9" />

            <ImageButton
                android:id="@+id/buttonEmail"
                android:layout_width="82dp"
                android:layout_height="75dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button"
                android:src="@drawable/img_10" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 